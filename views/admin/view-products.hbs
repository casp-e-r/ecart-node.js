<section>
  <div class="container">
      <div class="row mt-3">
          <a href="/admin/add-product" class="btn btn-success ml-auto">ADD PRODUCT</a>
      </div>
    <table class="table mt-3">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">title</th>
          <th scope="col">category</th>
          <th scope="col">price</th>
          <th scope="col">image</th>
        </tr>
      </thead>
      <tbody>
          {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>{{this.price}}</td>
          <td><img style="width: 60px;height: 60px;" src="/product-images/{{this._id}}.jpg" alt="why???"></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary" >Edit</a></td>
            <td>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you  want to delete{{this.Name}} this product')">Delete</a>
            </td> 
          
        </tr>
          {{/each}}
        
      </tbody>
    </table>
  </div>
</section>