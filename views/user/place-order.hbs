<section>
    <div class="container mt-5">
        <form action="" id="checkout-form">
            <div class="row">
                <div class="col-md-6 border border-dark">
                    <h2 class="text-center">Enter delivery Details</h2>
                    <div>
                        <label for="">Address</label><br>
                        <input type="text" name="address" id="address" class="form-control"><br>
                        <label for="">Pincode</label><br>
                        <input type="text" name="pincode" id="pincode" class="form-control"><br>
                        <label for="">Mobile No</label><br>
                        <input type="text" name="mobile" id="mobile" class="form-control"><br>
                        <input type="text" name="UserId" value="{{user._id}}" hidden>


                    </div>
                </div>
                <div class="col-md-4 ">
                    <div class="container mt-5 ml-5 checkout border border-primary ">
                        <h5>Total Amount:Rs. {{total}}</h5>
                        <hr>
                        <div class="payment">
                            <p>Payment method</p>
                            <label class="radio-inline" >
                                <input type="radio" name="payment-method" value="COD">COD
                            </label><br>
                            <label class="radio-inline mt-2">
                                <input type="radio" name="payment-method" value="ONLINE">Online Payment
                            </label>
                            <button class="float-right btn-primary">Checkout</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</section>
<style>
    input[type=radio]{
        width:20px;
        height: 20px;
    }
    label.radio-inline{
        display: flex;
        align-items:center;
    }
</style>